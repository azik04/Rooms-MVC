@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Index"] = "Index";
    Pager pager = new Pager();
    int pageNo = 0;
    if(ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage; 
    }
}
@model ICollection<Bookeds>
@if (pager.TotalPages > 0)
{
    
<div class="container-xxl bg-white p-0">
    <div class="table-responsive">
        <ul class="pagination justify-content-end">
                @for(var pge = pager.PageSize; pge <= pager.EndPage; pge++)
                {
                    <li class="page-iyem @(pge == pager.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-controller="Order" asp-action="GetAllOrders" asp-route-pg="@pge">@pge</a>
                    </li>
                }
            </ul>
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Room</th>
                    <th scope="col">Request</th>
                    <th scope="col">CheckIn</th>
                    <th scope="col">CheckOut</th>
                    <th scope="col">Remove</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td data-label="Name">@item.UserId</td>
                        <td data-label="Room">@item.RoomId</td>
                        <td data-label="Request">@item.Request</td>
                        <td data-label="CheckIn">@item.CheckIn</td>
                        <td data-label="CheckOut">@item.CheckOut</td>
                        <td data-label="Remove">
                            <a class="btn btn-danger" href="/Order/RemoveOrder/@item.Id">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

}