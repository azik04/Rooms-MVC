@using Rooms.ViewModels;
@model ResetPasswordVM
<div class="container">
    <div class="form-container">
        <form method="post" action="/Account/ResetPassword">
            <div class="form-group">
                <input asp-for="Email" value="@Model.Email" class="form-control" placeholder="Email">
            </div>
            <div class="form-group">
                <input asp-for="Token" value="@Model.Token" class="form-control" placeholder="Token">
            </div>
            <div class="form-group">
                <input asp-for="Password" class="form-control" placeholder="Password">
                <span style="color:red" asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password">
                <span style="color:red" asp-validation-for="ConfirmPassword"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
    </div>
</div>
<style>
    body {
        background-color: #f8f9fa;
    }

    .form-container {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1);
        margin-top: 50px;
    }

    .form-control {
        margin-bottom: 20px;
    }

    .btn-primary {
        background-color: #007bff !important;
        border-color: #007bff !important;
    }

        .btn-primary:hover {
            background-color: #0056b3 !important;
            border-color: #0056b3 !important;
        }
</style>